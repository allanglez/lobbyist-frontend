{#
/**
 * @file
 * Default theme implementation for a breadcrumb trail.
 *
 * Available variables:
 * - breadcrumb: Breadcrumb trail items.
 *
 * @ingroup templates
 */
#}
{% set container = theme.settings.fluid_container ? 'container-fluid' : 'container' %}
{% if breadcrumb %}
  <nav role="navigation" id="wb-bc" property="breadcrumb">
    <div class="container">
      <div class="row">
        <ol class="breadcrumb">
          {% for item in breadcrumb %}
            <li class="inline {{ cycle(['odd', 'even'], loop.index0) }}{% if loop.first %}{{ ' first' }}{% elseif loop.last %}{{ ' last'}}{% endif %}" {{ item.attributes }}>
              {% if item.url %}
                <a href="{{ item.url }}">{{ item.text }}</a>
              {% else %}
                {{ item.text }}
              {% endif %}
            </li>
          {% endfor %}
        </ol>
      </div>
    </div>
  </nav>
{% endif %}
