{#
/**
 * @file
 * Default theme implementation to display a table.
 *
 * Available variables:
 * - activity:
 * - link_edit_act: 
 *
 * @ingroup templates
 *
 * @see template_preprocess_in_house_activity()
 */
#}
<div class="header-view two-columns-purple-header">
  <div class="no-padding col-xs-6">
    <p>{% trans %} Lobbying activity{% endtrans %}</p>
  </div>
  <div class="col-xs-6 no-padding update-action">
    {% if link_edit_act is not empty %}
     <a class="update-action" href="{{link_edit_act}}">{% trans %}Edit activity{% endtrans %}</a>
    {% endif %}
  </div>
</div>
<div class="info-container gray-info-container">
  <div class="header-row no-padding row col-xs-12">
  	<div class="field col no-padding align-self-start col-xs-12 col-md-6">
  			<p class="field-title">Title</p> 
  		  {% if activity.title is not empty %}
  			<p>{{activity.title}}</p> 
  			{% endif %}
  	</div>
  	<div class="col-xs-12 col-md-6">
  			<p class="field-title">Topic</p> 
  		{% if activity.topic_term is not empty %}
  			<p>{{activity.topic_term}}</p>
  		{% endif %} 
  	</div>
  </div>
  <div class="header-row no-padding row col-xs-12">
  	<div class="field col no-padding align-self-start col-xs-12">
  		<p class="field-title">Details about the lobbying activity</p> 
		  {% if activity.add_detail is not empty %}
			  <p>{{activity.add_detail}}</p> 
			{% endif %}
  	</div>
  </div>
  <div class="header-row no-padding row col-xs-12">
  	<div class="field col no-padding align-self-start col-xs-12 col-md-6">
  		<p class="field-title">Lobbying or plan to lobbying</p>
  	  {% if activity.who_are_you_lobbying_label is not empty %}
  		  <p>{{activity.who_are_you_lobbying_label}}</p> 
  		{% endif %}
  	</div>
  	<div class="field col no-padding align-self-start col-xs-12 col-md-6">
  			<p class="field-title">Type of lobbying activity</p>
  		  {% if activity.how_do_you_want_to_lobby_ is not empty %}
  			  <p>{{activity.how_do_you_want_to_lobby_}}</p> 
  			{% endif %}
  	</div>
  </div>
  <div class="header-row no-padding row col-xs-12">
  	<div class="field col no-padding align-self-start col-xs-12 col-md-6">
			<p class="field-title">Has your organization received a grant from the goverment of Yukon witin the last year?</p>
		  {% if activity.has_your_organization_received_a_grant_from_the_government_of_yu is not empty %}
			  <p>{{activity.has_your_organization_received_a_grant_from_the_government_of_yu}}</p> 
			{% endif %}
  	</div>
  	<div class="field col no-padding align-self-start col-xs-12 col-md-6">
  			<p class="field-title">Was the grant awarded related to the matter the lobbying ha ben or will be undertaken?</p> 
  		  {% if activity.was_the_grant_awarded_related_to_the_matter_the_lobbying_has_bee is not empty %}
  			<p>{{activity.was_the_grant_awarded_related_to_the_matter_the_lobbying_has_bee}}</p> 
  			{% endif %}
  	</div>
  </div>
</div>